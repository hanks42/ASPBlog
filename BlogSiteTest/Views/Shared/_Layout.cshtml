<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - ASP.NET MVC 4 Blog Site</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Scripts.Render("~/bundles/modernizr")
        @Styles.Render("~/Content/bootstrapcss")

    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="blog-header">
                        <h1 class="blog-title">ASP.NET MVC4 Blog Site</h1>
                        <p class="lead blog-description">
                            Welcome to the ASP.NET MVC4 with Entity Framework 5 blog. This blog demonstrates features such as user accounts, CRUD actions for blog posts with user permissions and an updating front page view with AJAX.
                        </p>
                    </div>
                </div>
                <div id="body" class="col-sm-8 blog-main">
                    <section class="content-wrapper main-content clear-fix">
                        @RenderBody()
                    </section>

                </div>
                
                <div class="col-sm-3 col-offset-1 blog-sidebar">
                    <div class="sidebar-module sidebar-module-inset">
                        <h4>About</h4>
                        <p class="site-title">@Html.ActionLink("ASP.NET MVC4 Blog Site", "Index", "Home")</p>
                    </div>
                    <div class="sidebar-module">
                        <h4>Account</h4>
                        @Html.Partial("_LoginPartial")
                    </div>
                    <div class="sidebar-module">
                        <h4>Navigation</h4>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        </ul>
                    </div>
                </div>

                @Scripts.Render("~/bundles/jquery")
                @Scripts.Render("~/bundles/jqueryval")
                @Scripts.Render("~/bundles/bootstrapjs")
                @RenderSection("scripts", required: false)
            </div>
        </div>
        <div class="blog-footer">
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                </div>
            </div>
        </div>
    </body>
</html>
